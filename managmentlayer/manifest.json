{
	"manifest_version": 2,
	"name": "DMMIL Management Layer",
	"description": "description",
	"version": "0.0.1",
	"icons": {
		"64": "icons/2.png"
	},
	"background": {
		"scripts": [
			"background_script.js"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"https://tweetdeck.twitter.com/*",
				"https://twitter.com/*",
                "https://www.tagaqar.com/*"
			],
			"js": [
				"content_script.js"
			]
		}
	],
	"permissions": [
		"activeTab",
		"contextMenus",
        "storage"
	],
	"browser_action": {
		"default_icon": {
			"64": "icons/2.png"
		},
		"default_popup": "browserAction/index.html",
		"default_title": "DMMIL Management Layer"
	},
	"page_action": {
		"default_icon": {
			"64": "icons/2.png"
		},
		"default_popup": "pageAction/index.html",
		"default_title": "DMMIL Management Layer"
	}
}
